<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="16dp"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/outline_account_circle_24"/>

            <LinearLayout
                android:id="@+id/layout_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/iv_account"
                app:layout_constraintBottom_toBottomOf="@id/iv_account"
                app:layout_constraintStart_toEndOf="@id/iv_account"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adibah Satriani"
                    android:textColor="@color/primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adibah@gmail.com"
                    android:textColor="@color/primary_grey"
                    android:textSize="14sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/outline_calendar_month_24"
                app:tint="@color/primary_grey"
                app:layout_constraintStart_toStartOf="@id/tv_age"
                app:layout_constraintEnd_toEndOf="@id/tv_age"
                app:layout_constraintTop_toBottomOf="@id/layout_profile"/>

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="21 Tahun"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/iv_age"
                app:layout_constraintStart_toStartOf="@id/layout_profile"/>

            <ImageView
                android:id="@+id/iv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/outline_accessibility_24"
                app:tint="@color/primary_grey"
                app:layout_constraintStart_toStartOf="@id/tv_height"
                app:layout_constraintEnd_toEndOf="@id/tv_height"
                app:layout_constraintTop_toBottomOf="@id/layout_profile"/>

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="180 cm"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/iv_height"
                app:layout_constraintEnd_toEndOf="@id/layout_profile"/>

            <ImageView
                android:id="@+id/iv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/outline_monitor_weight_24"
                app:tint="@color/primary_grey"
                app:layout_constraintStart_toStartOf="@id/tv_weight"
                app:layout_constraintEnd_toEndOf="@id/tv_weight"
                app:layout_constraintTop_toBottomOf="@id/layout_profile"/>

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="58 kg"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/iv_height"
                app:layout_constraintStart_toStartOf="@id/layout_profile"
                app:layout_constraintEnd_toEndOf="@id/layout_profile"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/card_profile">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal information"
            android:textSize="18sp"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Information"
            android:textColor="@color/primary_blue"
            android:textAlignment="textStart"
            app:backgroundTint="@color/white"
            app:iconTint="@color/primary_grey"
            app:icon="@drawable/rectangle_grey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_blue"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assessment History"
            android:textColor="@color/primary_blue"
            android:textAlignment="textStart"
            app:backgroundTint="@color/white"
            app:iconTint="@color/primary_grey"
            app:icon="@drawable/rectangle_grey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_blue"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            android:text="Logout"
            android:textColor="@android:color/holo_red_light"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
